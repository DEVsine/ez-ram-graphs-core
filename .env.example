# Django Environment Variables Template
# Copy this file to .env and update the values for your environment

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Neo4j Database Configuration
# Option 1: URL with embedded credentials (recommended for development)
NEO4J_BOLT_URL=bolt://neo4j:your-password@localhost:7687

# Option 2: Separate credentials (alternative)
# NEO4J_HOST=localhost
# NEO4J_PORT=7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-password

# Option 3: Neo4j Aura (Cloud)
# NEO4J_BOLT_URL=neo4j+s://your-instance.databases.neo4j.io
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-aura-password

# Logging
DJANGO_LOG_LEVEL=INFO

# Production Settings (set these for production deployment)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
